{
  "name": "flutter-assets-generator",
  "displayName": "Flutter Assets Generator",
  "description": "Automatically generates and updates Dart classes for your Flutter assets to ensure type-safe and typo-free paths.",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "publisher": "ayman-dev",
  "repository": {
  "type": "git",
  "url": "https://github.com/ayshaleef/Flutter-Assets-Generator.git"
},
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pubspec.yaml"
  ],
  "keywords": [
  "flutter",
  "assets",
  "generator",
  "dart",
  "productivity"
],

  "main": "./dist/extension.js",
  "contributes": {
  "configuration": {
    "title": "Flutter Assets Generator",
    "properties": {
      "flutter-assets-generator.autoSync": {
        "type": "boolean",
        "default": true,
        "description": "Enable or disable automatic asset synchronization."
      },
      "flutter-assets-generator.outputDirectory": {
        "type": "string",
        "default": "lib/constants/assets",
        "description": "The directory where the Dart asset classes will be generated."
      }
    }
  },
  "commands": [
    {
      "command": "flutter-assets-generator.toggleAutoSync",
      "title": "AssetsApp: Toggle Auto-Sync",
      "icon": "$(zap)"
    },
    {
      "command": "flutter-assets-generator.forceGenerate",
      "title": "AssetsApp: Force Generate"
    }
  ],
  "menus": {
    "editor/title": [
      {
        "command": "flutter-assets-generator.toggleAutoSync",
        "group": "navigation",
        "when": "resourceExtname == .dart || resourceFilename == pubspec.yaml"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
